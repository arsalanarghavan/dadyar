# ─── AI Provider Selection ───────────────────────────────────────────
# Choose "openai" or "gemini" (can also be changed in the sidebar UI)
AI_PROVIDER=gemini

# ─── OpenAI Configuration (optional if using Gemini) ─────────────────
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2000

# OpenAI Embedding
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ─── Gemini Configuration (free-tier) ────────────────────────────────
# Get a free API key from https://aistudio.google.com/
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_EMBEDDING_MODEL=models/text-embedding-004
GEMINI_EMBEDDING_DIMENSION=768

# RAG Configuration
TOP_K_ARTICLES=5
SIMILARITY_THRESHOLD=0.7

# Application Configuration
APP_TITLE=سیستم هوشمند شبیه‌سازی تصمیم‌گیری قضایی
THEME_PRIMARY_COLOR=#020617
RTL_ENABLED=true

# Persian Font Configuration
FONT_FAMILY=Vazir, IRANSans, Tahoma

# Graph Configuration
GRAPH_WIDTH=1200
GRAPH_HEIGHT=800
